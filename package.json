{
  "name": "@umb-network/toolbox",
  "version": "2.0.0-alpha.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14.8.0"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umbrella-network/canvas.git"
  },
  "scripts": {
    "lint": "eslint ./src/**/*.ts ./test/**/*.ts --max-warnings=1 --fix",
    "clean": "rm -fr dist",
    "compile": "tsc",
    "copy:assets": "cpx 'src/**/*.{graphql,html,png,json,sol}' dist",
    "typeorm": "node --require ./node_modules/ts-node/register ./node_modules/typeorm/cli.js",
    "build": "npm run clean && npm run compile && npm run copy:assets",
    "test": "npx mocha --require ts-node/register --ui bdd 'test/**/*.test.ts'",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/moxios": "^0.4.9",
    "@types/node": "^14.14.13",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "chai": "^4.2.0",
    "cpx": "^1.5.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.15.0",
    "mocha": "^8.2.1",
    "moxios": "^0.4.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bignumber.js": "^9.0.1",
    "ethers": "^5.1.4"
  }
}
